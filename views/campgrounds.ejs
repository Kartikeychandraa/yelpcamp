<%- include ("partials/header.ejs") %>

<div class="container">
    <header class="jumbotron">
        <h2><i class="fas fa-campground"></i> Welcome to YelpCamp!</h2>
        <p>welcome to YelpCamp. Have a look into our listed camp sites, and always feel free to add more suggestions and improve our content!</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new"><i class="fas fa-plus"></i> Add a new site!</a>
        </p>
    </header> 

   <div class="row text-center" style="display: flex; flex-wrap: wrap;">
     <% camps.forEach(function(camps){ %>
       <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
             <img src="<%= camps.image %>">
             <div class="caption">
                 <h4><%= camps.name %></h4>
             </div>
             <p>
                 <a href="/campgrounds/<%= camps._id %>" class="btn btn-primary">More Info.</a>
             </p>
          </div>
        </div>
     <% }); %>
    </div>
</div>

<%- include ("partials/footer.ejs") %> 
