<%- include ("partials/header.ejs") %> 

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit your comment</h1>
        <form action="/campgrounds/<%= camp_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control text-center" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-warning btn-block" type="submit">
            </div>
        </form>
        <a href="/campgrounds">Go Back.</a>
    </div>
</div>

