<%- include ("partials/header.ejs") %> 

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= campsss.name %></h1>
        <form action="/campgrounds/<%= campsss._id %>/?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control text-center" type="text" name="campsss[name]" value="<%= campsss.name %>">
            </div>
            <div class="form-group">
                <input class="form-control text-center" type="text" name="campsss[image]" value="<%= campsss.image %>">
            </div>
            <div class="form-group">
                <input class="form-control text-center" type="text" name="campsss[description]" value="<%= campsss.description %>">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-warning btn-block" type="submit">
            </div>
        </form>
        <a href="/campgrounds">Go Back.</a>
    </div>
</div>

<%- include ("partials/footer.ejs") %> 
